[alias]
	br = branch
	ci = commit
	co = checkout
	st = status
	lg = log --graph --abbrev-commit --date=relative --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
[core]
	autocrlf = input
 	editor = nvim
	pager = delta
[interactive]
	diffFilter = delta --color-only
[color]
	ui = true
[diff]
	colorMoved = default
[delta]
	navigate = true
	line-numbers = true
	light = false
[merge]
	conflictstyle = diff3
	tool = vimdiff
[mergetool]
	path = nvim
[init]
	defaultBranch = main
